@page
@model Collabrix.Pages.allProjectsModel
@{
    ViewData["Title"] = "Projects";
}

<div class="container">
    <div class="page-inner">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-2 mb-1">
            <div>
                <h3 class="fw-bold mb-1">Projects</h3>
            </div>
            <div class="ms-auto">
                <a class="btn btn-primary btn-round"
                   asp-page="/ProjectPages/createProject" asp-route-UserId="1">
                    <i class="fa fa-plus me-2"></i>Create
                    Project
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-round">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <!-- Projects table -->
                            <table class="table align-items-center mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">
                                            Name
                                        </th>
                                        <th scope="col"
                                            class="text-center">
                                            Type
                                        </th>
                                        <th scope="col"
                                            class="text-center">
                                            Lead
                                        </th>
                                        <th scope="col"
                                            class="text-center">
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Tuple<Models.Project, string, string> project in Model.Projects)
                                    {
                                        <tr>
                                            <th scope="row">
                                                <button class="btn btn-icon btn-round btn-success btn-sm me-2">
                                                    <i class="fa fa-check"></i>
                                                </button>
                                                @project.Item1.ProjectName
                                            </th>
                                            <td class="text-center">
                                                @(await Controllers.LookUpcontroller.getValueById(project.Item1.ProjectType))
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <div class="avatar me-2">
                                                        <span class="avatar-title rounded-circle border border-white">@project.Item3</span>
                                                    </div>
                                                    <div class="username">
                                                        @project.Item2
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <button class="btn btn-icon btn-round btn-primary btn-md me-2">
                                                    <i class="fas fa-cog"></i>
                                                    <!-- Settings Icon -->
                                                </button>
                                                <button class="btn btn-icon btn-round btn-danger btn-md">
                                                    <i class="fas fa-trash-alt"></i>
                                                    <!-- Delete Icon -->
                                                </button>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
